dimensions(w, h)
  width w
  height h

body
  padding 20px
  font 14px "Lucida Grande", Helvetica, Arial sans-serif
  background white
  color black
  // background #151515
  // color white

a
  margin 10px
  color lightseagreen

div p
  padding 0
  margin 0
  text-align center
  position relative

#drop-area
  dimensions 10% 100%
  position absolute
  top 0
  right 0
  z-index: 2;
  .drop
    display block

.drag
  width 100px
  height 100px
  border-radius 50px
  position absolute
  z-index 5

//chat on tokens
