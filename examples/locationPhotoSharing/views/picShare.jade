extends layout

block content
  #header
    .drop-area.header-content#drop1

  #body
    .drop-area.left#drop2
    #center
      h1 Drag pictures and drop them to other devices
      h2 User tag:
        span#userID
      table#locator
        - var rows = 2, columns = 2
        - for (var i = 0; i < rows; i++)
          tr
            - for (var j = 0; j < columns; j++)
              - var val = columns * i + j
              td(id = 'quadrant-' + val)
                img(src='/img/position-' + val + '.png')
                span #{val}
    .drop-area.right#drop3

  #footer
    .drop-area.footer-content#drop4

  - for (var i = 0; i < 4; i++)
    img.drag(src='/img/img' + i + '.jpg', id='img-' + i)

  script(data-main='/js/picShare.js', src='/js/require.js')
