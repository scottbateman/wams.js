dimensions(w, h)
  width w
  height h

body
  overflow hidden
  padding 10px
  font 14px "Lucida Grande", Helvetica, Arial sans-serif
  // background white
  // color black
  background #151515
  color white

a
  margin 5px
  color lightseagreen

#minimap
  position absolute
  right 2%
  bottom 2%

.ball
  dimensions 100px 100px
  border-radius 50px
  position absolute
  z-index 5

